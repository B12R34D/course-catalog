generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url = env("DATABASE_URL")
}
enum users_role_enum {
  USER
  ADMIN
}

enum courses_level_enum {
  ALL_LEVEL
  BEGINNER
  INTERMEDIATE
  ADVANCE
}

model users {
  id       Int              @id @default(autoincrement())
  name     String
  email    String           @unique
  password String
  role     users_role_enum  @default(USER)

  courses  courses[]
}

model topics {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  parent_id   Int?

  courses     courses[]
}

model languages {
  id      Int      @id @default(autoincrement())
  name    String

  courses courses[]
}

model courses {
  id                Int      @id @default(autoincrement())
  topic_id          Int
  language_id       Int
  created_by_id     Int
  title             String
  description       String
  short_description String
  price             Decimal   @db.Decimal(18,2)
  discount_rate     Decimal   @db.Decimal(5,2)
  thumbnail_url     String
  level             courses_level_enum
  created_at        DateTime  @default(now())
  updated_at        DateTime  @updatedAt

  topic     topics    @relation(fields: [topic_id], references: [id])
  language  languages @relation(fields: [language_id], references: [id])
  creator   users     @relation(fields: [created_by_id], references: [id])
}
